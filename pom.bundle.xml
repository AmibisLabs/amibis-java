<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.prima.osgi</groupId>
    <artifactId>jomiscid-bundle</artifactId>
    <packaging>bundle</packaging>
    <name>JOMiSCID Bundle</name>
    <version>@@@bv@@@</version>
    <description>
        Bundlized version of jOMiSCID
    </description>
    
    <distributionManagement>
        <repository>
            <id>archiva.releases</id>
            <name>Prima Internal Releases</name>
            <url>dav:http://oberon:8080/archiva/repository/internal/</url>
        </repository>
    </distributionManagement>
    
    <dependencies>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>1.0.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.osgi.compendium</artifactId>
            <version>1.0.1</version>
        </dependency>
        <dependency>
            <groupId>fr.prima</groupId>
            <artifactId>jomiscid</artifactId>
            <version>@@@v@@@</version>
        </dependency>
        <dependency>
            <groupId>org.freedesktop</groupId>
            <artifactId>dbus</artifactId>
            <version>2.1</version>
        </dependency>
        <dependency>
            <groupId>org.freedesktop</groupId>
            <artifactId>dbus-bin</artifactId>
            <version>2.1</version>
        </dependency>
        <dependency>
	    <groupId>cx.ath</groupId>
	    <artifactId>unix</artifactId>
	    <version>0.2</version>
        </dependency>
        <dependency>
	    <groupId>cx.ath</groupId>
	    <artifactId>hexdump</artifactId>
	    <version>0.1</version>
        </dependency>     
        <dependency>
	    <groupId>cx.ath</groupId>
	    <artifactId>debug-disable</artifactId>
	    <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>com.apple</groupId>
            <artifactId>dns_sd</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>dev.java.net</groupId>
            <artifactId>JiveDNS</artifactId>
            <version>1.1-lightened</version>
        </dependency>    
    </dependencies>
    
    
    <build>
        <extensions>
	    <extension>
	        <groupId>org.apache.maven.wagon</groupId>
	        <artifactId>wagon-webdav</artifactId>
	        <version>1.0-beta-2</version>
	    </extension>
	    <extension>
	        <groupId>org.apache.maven.wagon</groupId>
	        <artifactId>wagon-ssh-external</artifactId>
	        <version>1.0-beta-2</version>
	    </extension>
        </extensions>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-ipojo-plugin</artifactId>
                <version>0.8.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>ipojo-bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <ignoreLock>true</ignoreLock>
                    <instructions>
	                <Export-Package>fr.prima.omiscid.user.*</Export-Package>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
	                <Embed-Dependency>*;artifactId=!org.osgi.*</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
